<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.nf.ch01_homework.mapper.CityMapper">

    <resultMap id="cityMap" type="edu.nf.ch01_homework.entity.City">
        <id property="cityId" column="city_id"/>
        <result property="cityName" column="city_name"/>
        <result property="cityCode" column="city_code"/>
        <result property="province" column="province"/>
    </resultMap>

    <select id="selectForId" resultMap="cityMap">
        select city_id, city_name, city_code, province from city_info where city_id = #{id}
    </select>
</mapper>